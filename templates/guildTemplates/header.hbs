<div class="header name-stacked">
    <div class="stats">
        <span class="guild-name">{{guild.name}}</span>
    </div>
    <div class="stats">
        <span class="current-date">{{guild.currentDate.displayString}}</span>
    </div>
    <div class="header-buttons">
        {{#if allowInteraction}}
            <button type="button" data-action="openVault">Guild Vault</button>
        {{/if}}
        <button type="button" data-action="openNotes">Guildmaster's Notes</button>
    </div>
</div>