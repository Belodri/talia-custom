<div class="tab graveyard {{tabs.graveyard.cssClass}} scrollable" data-tab="graveyard" data-group="main">
    <div class="tab-header">
        <span class="column-title">Graveyard</span>
    </div>
    <div class="column-container scrollable">
        <div class="card-column scrollable">
            
            {{#each adventurers}}
            {{#if (and adventurer.isDead (or isGm (not adventurer.hidden) ) )}}
            {{> 'modules/talia-custom/templates/guildTemplates/partials/adventurerCard.hbs' }}
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>
